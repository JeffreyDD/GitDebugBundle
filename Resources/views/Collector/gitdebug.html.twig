{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        <img alt="Git Logo" style="max-width: 20px; max-height: 20px; border-width: 0; vertical-align: middle; margin-right: 5px;" src="data:image/png;base64," />
    {% endset %}
    {% set text %}
        <span>{{ collector.branch }}</span>
    {% endset %}
    {% include 'WebProfilerBundle:Profiler:toolbar_item.html.twig' with { 'link': profiler_url } %}
{% endblock %}

{% block menu %}
    <span class="label">
        <span class="icon">
            <img alt="Git Logo" style="max-width: 32px; max-height: 32px;" src="data:image/png;base64," />
        </span>
        <strong>Git</strong>
    </span>
{% endblock %}

{% block panel %}
    <h2>Git</h2>

    {% if collector.branches is not empty %}
        <h3 style="margin: 10px 0">Branches</h3>
        <ul style="margin-left: 25px">
            {% for branch in collector.branches %}
                <li style="list-style-type: circle; font-size: 0.9em; padding: 2px 0; font-family: monospace;">
                    {% if branch == collector.branch %}
                        <strong style="color: green">{{ branch }}</strong>
                    {% else %}
                        {% if 'remotes' in branch %}
                            <span style="color: red">{{ branch }}</span>
                        {% else %}
                            {{ branch }}
                        {% endif %}
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    {% if collector.tags is not empty %}
        <h3 style="margin: 10px 0">Tags</h3>
        <ul style="margin-left: 25px">
            {% for tag in collector.tags %}
                <li style="list-style-type: circle; font-size: 0.9em; padding: 2px 0; font-family: monospace;">
                    {{ tag }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}